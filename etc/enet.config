[
  {enet,[
  	{interface,enet_tcp_interface},   %% 接口模块 
    {ports,[8080]},               %% TCP端口列表
    
    {http_port,80},
    {http_num_acceptors, 1000},
    {routes,[
    	{"/api",enet_api_handler,[
	    	{"/nodes", [nodes]}
		]}
    ]}
  ]},
  
  %% 日志
  {lager, [
	  {log_root, "./logs"},
	  {error_logger_hwm, 50},
	  {async_threshold, 20},
	  {handlers, [
	  	{lager_console_backend, [info, {lager_default_formatter,[{eol, "\r\n"}]}]},
	    {lager_file_backend, [{file, "console.log"}, {level, info},{size, 10485760}, {date, "$D0"}, {count, 5}]},
	    {lager_file_backend, [{file, "error.log"}, {level, error},{size, 10485760}, {date, "$D0"}, {count, 5}]}
	  ]},
	  {crash_log,"crash.log"},
	  {crash_log_size,10485760},
      {crash_log_date,"$D0"},
      {crash_log_count, 5}
   ]}
].
